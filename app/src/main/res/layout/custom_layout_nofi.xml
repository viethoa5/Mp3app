<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/purple_200">
    <ImageView
        android:id="@+id/iconnoficationsong"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_audiotrack_24"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iconnoficationsong"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/app_name"
          android:textColor="@color/black"
          android:textSize="14sp"
          android:maxLines="1"
          android:id="@+id/textviewnofisongtitle">
      </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:maxLines="1"
            android:id="@+id/textviewnofisingertitle">
        </TextView>
    </LinearLayout>
    <ImageView
        android:paddingTop="15dp"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_close"
        android:layout_alignParentEnd="true"
        android:id="@+id/turnoffnofi"/>
    <ImageView
        android:paddingTop="15dp"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:src="@drawable/iconrepeat"
        android:layout_toLeftOf="@id/turnoffnofi"
        android:id="@+id/nofiiconrepeat">
    </ImageView>
    <ImageView
        android:paddingTop="15dp"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:src="@drawable/iconnext"
        android:layout_toLeftOf="@id/nofiiconrepeat"
        android:id="@+id/nofiiconnext">
    </ImageView>
    <ImageView
        android:paddingTop="15dp"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:src="@drawable/iconplay"
        android:layout_toLeftOf="@id/nofiiconnext"
        android:id="@+id/nofiiconpause">
    </ImageView>
    <ImageView
        android:id="@+id/nofiiconpreview"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/nofiiconpause"
        android:paddingTop="15dp"
        android:src="@drawable/iconpreview">
    </ImageView>
    <ImageView
        android:paddingTop="15dp"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:src="@drawable/iconsuffle"
        android:layout_toLeftOf="@id/nofiiconpreview"
        android:id="@+id/nofiiconrandomize">
    </ImageView>
</RelativeLayout>