<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:background="@drawable/custombannerbackground"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:id="@+id/imageViewbgplaylist"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">
    </ImageView>
    <View
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@id/imageViewbgplaylist"
        android:scaleType="fitXY"
        android:id="@+id/ImgPlaylist"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1"
        android:id="@+id/playlistname"
        android:textStyle="bold"
        android:layout_marginLeft="13dp"
        android:textColor="#ffff"
        android:layout_toRightOf="@id/ImgPlaylist"
        android:layout_alignBottom="@id/ImgPlaylist"
        android:textSize="13dp"
        android:text="Nhung bai hit cu"/>

</RelativeLayout>