<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageviewsonghot"
        android:layout_width="80dp"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:layout_height="80dp">
    </ImageView>
    <TextView
        android:text= "Ten bai hat"
        android:textSize="18sp"
        android:textColor="#363636"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/imageviewsonghot"
        android:id="@+id/textviewsongtitle"
        android:ellipsize="end"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxLines="1"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:textColor="#8c8a8a"
        android:textSize="18sp"
        android:text="Ca Si"
        android:maxLines="1"
        android:layout_toRightOf="@id/imageviewsonghot"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:id="@+id/textviewsingername"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewsongtitle">
    </TextView>
    <ImageView
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove"
        android:layout_width="30dp"
        android:id="@+id/imgaviewlike"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_height="30dp">
    </ImageView>

</RelativeLayout>