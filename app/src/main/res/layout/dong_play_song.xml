<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewplayindext">
        </TextView>
        <TextView
            android:textSize="17sp"
            android:textColor="@color/white"
            android:text="Ten Ca Khuc"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewplaynamesong"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textviewplayindext">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewplaynamesong"
            android:id="@+id/textviewplaysingersong"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textviewplayindext"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Ca Si"
            android:textColor="@color/white"
            android:textSize="12sp">
        </TextView>
    </RelativeLayout>

</RelativeLayout>